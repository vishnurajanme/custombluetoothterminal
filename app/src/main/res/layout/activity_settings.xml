<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/settingshead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:text="Settings"
            android:textColor="@color/colorOff"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/appnametext"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOff"
            android:textColorHint="@color/colorOff"
            android:layout_below="@id/settingshead"
            android:hint="App Name"
            />

        <EditText
            android:id="@+id/screen1text"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOff"
            android:textColorHint="@color/colorOff"
            android:layout_below="@id/appnametext"
            android:hint="Screen 1 Name"
            />

        <EditText
            android:id="@+id/screen2text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/screen1text"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="3dp"
            android:hint="Screen 2 name"
            android:textColor="@color/colorOff"
            android:textColorHint="@color/colorOff" />

        <EditText
            android:id="@+id/abouttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/screen2text"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="3dp"
            android:lines="3"
            android:maxLines="5"
            android:hint="About You - A short intro"
            android:textColor="@color/colorOff"
            android:textColorHint="@color/colorOff" />

        <GridLayout
            android:id="@+id/buttongrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="3dp"
            android:layout_below="@id/abouttext"
            >

            <Button
                android:id="@+id/splashButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_below="@id/screen2text"
                android:drawableTop="@drawable/splash"
                android:textSize="10dp"
                android:text="Choose Splash" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:id="@+id/chosenSplash"
                android:src="@drawable/robot"
                android:layout_below="@id/splashButton"/>

            <Button
                android:id="@+id/aboutButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_below="@id/screen2text"
                android:drawableTop="@drawable/yourphoto"
                android:textSize="10dp"
                android:text="Your Photo" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:id="@+id/aboutImage"
                android:src="@drawable/aboutimage"
                android:layout_below="@id/splashButton"/>

        </GridLayout>

        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="3dp"
            android:text="RESET APP"
            android:layout_below="@id/buttongrid"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/savebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="15dp"
            android:text="SAVE"
            android:layout_below="@id/reset"
            />


    </RelativeLayout>

    </ScrollView>




</RelativeLayout>